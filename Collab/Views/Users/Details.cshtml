@model Collab.Models.User

@{
    ViewData["Title"] = "User Details";
}

<h2>User Details</h2>

<div class="card" style="width: 18rem;">
    <img src="@Model.ProfilePictureURL" class="card-img-top" alt="User Profile Picture" />
    <div class="card-body">
        <h5 class="card-title">@Model.Username</h5>
        <p class="card-text">
            <strong>Email:</strong> @Model.Email
            <br />
            <strong>Date Joined:</strong> @Model.DateJoined.ToString("MMMM dd, yyyy")
        </p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Home</a>
    </div>
</div>
